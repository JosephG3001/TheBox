<UserControl x:Class="TheBox.Common.Controls.BreadCrumbControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheBox.Common.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Margin="10,10,10,0" >
        <Viewbox HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock FontFamily="Consolas" Text="{Binding BreadCumbs}" Foreground="White" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        </Viewbox>
    </Grid>
    
</UserControl>
