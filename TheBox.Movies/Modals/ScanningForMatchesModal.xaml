<UserControl x:Class="TheBox.Movies.ScanningForMatchesModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheBox.Movies"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:UI="clr-namespace:TheBox.Common.UI;assembly=TheBox.Common"
             xmlns:CommonControls="clr-namespace:TheBox.Common.Controls;assembly=TheBox.Common">

    <Grid>
        <Viewbox >
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock HorizontalAlignment="Center" FontSize="15" Margin="20" Foreground="White" Text="Scanning For Matches"></TextBlock>
                <CommonControls:IBoxProgressBar x:Name="progressBar1" Height="20" Margin="10" Max="758" Value="0" />
                <TextBlock HorizontalAlignment="Center" FontSize="10" Margin="20" Foreground="White" Text="Please wait..."></TextBlock>
            </StackPanel>
        </Viewbox>
    </Grid>
</UserControl>
