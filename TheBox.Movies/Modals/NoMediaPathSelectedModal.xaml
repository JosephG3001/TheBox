<UserControl x:Class="TheBox.Movies.NoMediaPathSelectedModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheBox.Movies"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid>
        <Viewbox >
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock HorizontalAlignment="Center" FontSize="20" Margin="20" Foreground="White" Text="Media Path Error"></TextBlock>
                <TextBlock HorizontalAlignment="Center" Margin="20" Foreground="White" Text="Please select a root folder for media files or check that location is accessable"></TextBlock>
            </StackPanel>
        </Viewbox>
    </Grid>
</UserControl>
